# Copy to .env and fill in your values. Never commit .env.

# Production: set so CORS and error messages are strict
# NODE_ENV=production

# Allowed frontend origin(s) in production, comma-separated (e.g. https://anoryx.com,https://www.anoryx.com)
# FRONTEND_ORIGIN=https://yourdomain.com

# MongoDB Atlas: create a cluster, then set MONGODB_URI or MONGO_URI (replace <password> with your DB user password)
MONGODB_URI=mongodb+srv://<user>:<password>@cluster.mongodb.net/
# Database name (default: Anoryx_userBase)
# MONGODB_DB_NAME=Anoryx_userBase

# Auth: strong random string for JWT signing (server-side only)
JWT_SECRET=your-strong-random-secret-here

# Google OAuth 2.0 (Web) from Google Cloud Console; same Client ID in frontend as VITE_GOOGLE_CLIENT_ID
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000

# Where contact form messages are sent
CONTACT_EMAIL=your-contact@example.com

# Gmail / SMTP (use App Password for Gmail: https://myaccount.google.com/apppasswords)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Optional: "From" address (defaults to CONTACT_EMAIL)
# SMTP_FROM=your-contact@example.com

# Server port (default 5000)
# PORT=5000

# Auth rate limit: max requests per window (default 20 per 15 min)
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX=20
